---
import Layout from "src/layout/Layout.astro";
import Search from "@components/Search/Search.svelte";
import { getLangSettings } from "@translations/translationSettings";

const { t } = getLangSettings(Astro.url);
---

<Layout title={t.title}>
  <Search
    client:only="svelte"
    donateText={t.donate_text}
    inputPlaceholder={t.search_input_placeholder}
  />
</Layout>
